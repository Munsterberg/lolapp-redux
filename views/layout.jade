doctype html
html
  head

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='csrf-token', content=_csrf)
    title #{title} - LolApp Redux
    != css('main')
    != css('style')
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,700|Asap:400,700' rel='stylesheet' type='text/css'>
  body
    include partials/header

    .container
      include partials/flash
      block content

    include partials/footer

    != js('application')